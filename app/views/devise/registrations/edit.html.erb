<div class="container">
  <h2>Editar Adminstrador</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, "Correo" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password, "Contraseña" %> <i>(Deje en blanco si no desea cambiar contraseña)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> caracteres mínimos</em>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmación de la contraseña" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, "Contraseña actual" %> <i>(Ingrese la contraseña actual para guardar los cambios)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= link_to "Regresar", :back, class:"btn btn-danger" %>
      <%= f.submit "Actualizar", class:"btn btn-primary" %>
    </div>
  <% end %>
  <br>
  <br>

</div>
