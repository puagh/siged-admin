<p id="notice"><%= notice %></p>

<h1>Listado de Evaluaciones</h1>

<table class="table table-sm table-striped">
  <thead>
    <tr>
      <th>RFC Empleado</th>
      <th>Compromiso</th>
      <th>Responsabilidad</th>
      <th>Cooperación</th>
      <th>Orden y Calidad</th>
      <th>Mejora continua</th>
      <th>Fecha</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.employee.rfc %></td>
        <td><%= evaluation.ind_1 %></td>
        <td><%= evaluation.ind_2 %></td>
        <td><%= evaluation.ind_3 %></td>
        <td><%= evaluation.ind_4 %></td>
        <td><%= evaluation.ind_5 %></td>
        <td><%= evaluation.created_at.strftime("%d-%m-%Y") %></td>

        <td><%= link_to 'Mostrar', evaluation %></td>
        <td><%= link_to 'Editar', edit_evaluation_path(evaluation) %></td>
        <td><%= link_to 'Eliminar', evaluation, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Evaluación', new_evaluation_path %>
